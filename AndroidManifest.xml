<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.example.testhls">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk android:minSdkVersion="11" />

    <application
            android:label="TestHLS"
            android:icon="@drawable/icon"
            android:hardwareAccelerated="true">

        <activity android:name="MediaPlayerDemo" android:label="TestHLS">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="MediaPlayerDemo_Video" android:label="TestHLS/Player">
        </activity>

    </application>
</manifest>
